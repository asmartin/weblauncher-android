<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avidandrew.weblauncher"
    android:versionCode="4"
    android:versionName="1.3.1" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity android:name="com.avidandrew.weblauncher.MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>            
        </activity>
        <activity
            android:name="com.rekap.remote.MouseActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.rekap.remote.Preferences" android:label="@string/prefs" ></activity>
        <activity
            android:name="tk.nfsmonstr.simplewakeonlan.WOLActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name="tk.nfsmonstr.simplewakeonlan.AboutActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name="tk.nfsmonstr.simplewakeonlan.AddOrEditServerActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat">
        </activity>
    </application>

</manifest>